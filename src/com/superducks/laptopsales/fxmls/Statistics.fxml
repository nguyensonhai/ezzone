<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="855.0" prefWidth="1269.0" styleClass="bg3" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.superducks.laptopsales.controllers.Statistics">
   <children>
      <TableView fx:id="tblAccounts" layoutX="22.0" layoutY="21.0" onMouseClicked="#tblAccounts_Clicked" prefHeight="400.0" prefWidth="400.0">
        <columns>
          <TableColumn fx:id="clmUsername" prefWidth="113.0" style="-fx-alignment: CENTER;" text="Username" />
          <TableColumn fx:id="clmFullname" prefWidth="286.0" style="-fx-alignment: CENTER;" text="Fullname" />
        </columns>
      </TableView>
      <TableView fx:id="tblBills" layoutX="22.0" layoutY="454.0" prefHeight="325.0" prefWidth="1164.0">
         <columns>
            <TableColumn fx:id="clmBillID" prefWidth="103.0" style="-fx-alignment: CENTER;" text="Bill ID" />
            <TableColumn fx:id="clmUser" prefWidth="342.0" style="-fx-alignment: CENTER;" text="User" />
            <TableColumn fx:id="clmBuyer" prefWidth="342.0" style="-fx-alignment: CENTER;" text="Buyer" />
            <TableColumn fx:id="clmDateCreated" prefWidth="195.0" style="-fx-alignment: CENTER;" text="Date Created" />
            <TableColumn fx:id="clmTotalPrice" prefWidth="180.0" style="-fx-alignment: CENTER;" text="Total Price" />
         </columns>
      </TableView>
      <PieChart fx:id="pieChartStatistics" layoutX="848.0" layoutY="21.0" prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: white;" title="Pie Chart" />
      <AreaChart fx:id="areaChartStatistics" layoutX="435.0" layoutY="21.0" prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: white;">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </AreaChart>
      <ImageView fx:id="btnNonView" fitHeight="45.0" fitWidth="45.0" layoutX="1203.0" layoutY="481.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../icons/embems/symboliclink.png" />
         </image>
      </ImageView>
      <ImageView fx:id="btnView" fitHeight="45.0" fitWidth="45.0" layoutX="1203.0" layoutY="481.0" onMouseClicked="#btnView_Clicked" pickOnBounds="true" preserveRatio="true" visible="false">
         <image>
            <Image url="@../icons/embems/locallymodified.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
