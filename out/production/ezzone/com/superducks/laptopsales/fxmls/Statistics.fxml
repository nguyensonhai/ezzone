<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="698.0" prefWidth="1390.0" styleClass="bg3" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.superducks.laptopsales.controllers.Statistics">
   <children>
      <HBox>
         <children>
            <TableView fx:id="tblAccounts" onMouseClicked="#tblAccounts_Clicked" prefHeight="305.0" prefWidth="291.0">
              <columns>
                <TableColumn fx:id="clmUsername" prefWidth="94.0" style="-fx-alignment: CENTER;" text="Username" />
                <TableColumn fx:id="clmFullname" prefWidth="195.0" style="-fx-alignment: CENTER;" text="Fullname" />
              </columns>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
               </HBox.margin>
            </TableView>
            <BarChart fx:id="barChartStatistics" animated="false" legendVisible="false" prefHeight="305.0" prefWidth="375.0" style="-fx-background-color: white;" title="Bar Chart">
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" />
              </yAxis>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="5.0" top="5.0" />
               </HBox.margin>
            </BarChart>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
      <TableView fx:id="tblBills" layoutX="14.0" layoutY="330.0" onMouseClicked="#tblBills_Clicked" prefHeight="305.0" prefWidth="688.0">
         <columns>
            <TableColumn fx:id="clmBillID" prefWidth="67.0" style="-fx-alignment: CENTER;" text="Bill ID" />
            <TableColumn fx:id="clmUser" prefWidth="172.0" style="-fx-alignment: CENTER;" text="User" />
            <TableColumn fx:id="clmBuyer" prefWidth="187.0" style="-fx-alignment: CENTER;" text="Buyer" />
            <TableColumn fx:id="clmDateCreated" prefWidth="150.0" style="-fx-alignment: CENTER;" text="Date Created" />
            <TableColumn fx:id="clmTotalPrice" prefWidth="110.0" style="-fx-alignment: CENTER;" text="Total Price" />
         </columns>
      </TableView>
      <ImageView fx:id="btnNonView" fitHeight="40.0" fitWidth="40.0" layoutX="662.0" layoutY="645.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../icons/embems/symboliclink.png" />
         </image>
      </ImageView>
      <ImageView fx:id="btnView" fitHeight="40.0" fitWidth="40.0" layoutX="662.0" layoutY="645.0" onMouseClicked="#btnView_Clicked" pickOnBounds="true" preserveRatio="true" visible="false">
         <image>
            <Image url="@../icons/embems/locallymodified.png" />
         </image>
      </ImageView>
      <PieChart fx:id="pieChartStatistics" layoutX="716.0" layoutY="11.0" prefHeight="670.0" prefWidth="659.0" style="-fx-background-color: white;" title="Pie Chart" />
   </children>
</AnchorPane>
